@model List<Eletrodomestico>

<h1>Lista de Eletrodomesticos</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Consumo de energia (kwh)</th>
            <th>Detalhes</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var dispositivo in Model)
        {
            <tr>
                <td>@dispositivo.Marca</td>
                <td>@dispositivo.Modelo</td>
                <td>@dispositivo.ConsumoEnergetico</td>

                <td>
                    @if (dispositivo is Televisor)
                    {
                        <strong>Tipo:</strong> @(((Televisor)dispositivo).EhSmart ? "Smart" : "Não é Smart")
                    }
                    else if (dispositivo is Geladeiras)
                    {
                        <strong>Freezer:</strong> @(((Geladeiras)dispositivo).TemFreezer ? "Sim" : "Não")
                    }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>